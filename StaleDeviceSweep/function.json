{
  "bindings": [
    {
      "name": "Timer",
      "type": "timerTrigger",
      "direction": "in",
      "schedule": "0 0 0 * * *"
    },
    {
      "name": "reportBlob",
      "type": "blob",
      "direction": "out",
      "path": "reports/stale-devices-{datetime:yyyy-MM-ddTHH-mm-ssZ}.json",
      "connection": "AzureWebJobsStorage"
    },
    {
      "name": "summaryBlob",
      "type": "blob",
      "direction": "out",
      "path": "reports/stale-devices-summary-{datetime:yyyy-MM-ddTHH-mm-ssZ}.txt",
      "connection": "AzureWebJobsStorage"
    },
    {
      "name": "actionPlanCsvBlob",
      "type": "blob",
      "direction": "out",
      "path": "reports/actionPlan-{datetime:HHmmss}.csv",
      "connection": "AzureWebJobsStorage"
    },
    {
      "name": "inventoryCsvBlob",
      "type": "blob",
      "direction": "out",
      "path": "reports/inventory-{datetime:HHmmss}.csv",
      "connection": "AzureWebJobsStorage"
    }
  ]
}